<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_lab"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img_shopping_item"
        android:src="@drawable/ic_image_black_24dp"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_name_shopping_item"
        android:text="Vitamini"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/bellerose"
        android:gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/txt_price_shopping_item"
            android:text="$20"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:fontFamily="@font/bellerose"
            android:gravity="left"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/txt_add_to_cart"
            android:text=" "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:fontFamily="@font/bellerose"
            android:gravity="center_horizontal"
            android:drawableRight="@drawable/ic_shopping_cart_black_24dp2"
            />

    </LinearLayout>
</LinearLayout>

</androidx.cardview.widget.CardView>
