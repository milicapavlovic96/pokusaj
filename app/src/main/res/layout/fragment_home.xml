<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment"
    android:orientation="vertical"
    android:background="@color/homeBackground"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_user_information"
        android:visibility="gone"
        android:weightSum="4"
        android:background="@color/colorButton"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:src="@drawable/ic_account_circle_white_24dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>

        <TextView
            android:id="@+id/txt_user_name"
            android:textColor="@android:color/white"
            android:text="MilicaPavlovic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/txt_member_type"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text="Normal"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_booking"
                android:layout_marginRight="8dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_event_note_black_24dp"
                        android:layout_width="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="50dp" />

                    <TextView
                        android:text="Booking"
                        android:fontFamily="@font/bellerose"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/textCardSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_cart"
                android:layout_marginRight="8dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                >

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.nex3z.notificationbadge.NotificationBadge
                        android:id="@+id/notification_badge"
                        android:layout_toRightOf="@+id/txt_cart_title"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:nbMaxTextLength="2"
                        />



                    <ImageView
                        android:id="@+id/cart_icon"
                        android:src="@drawable/ic_shopping_cart_black_24dp2"
                        android:layout_width="50dp"
                        android:layout_centerHorizontal="true"

                        android:layout_height="50dp" />

                    <TextView
                        android:id="@+id/txt_cart_title"
                        android:layout_below="@+id/cart_icon"
                        android:text="Cart"
                        android:fontFamily="@font/bellerose"
                        android:layout_centerHorizontal="true"

                        android:textSize="@dimen/textCardSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_history"
                android:layout_marginRight="8dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_history_black_24dp"
                        android:layout_width="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="50dp" />

                    <TextView
                        android:text="History"
                        android:fontFamily="@font/bellerose"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/textCardSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_notification"
                android:layout_marginRight="8dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_notifications_black_24dp"
                        android:layout_width="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="50dp" />

                    <TextView
                        android:text="Notification"
                        android:fontFamily="@font/bellerose"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/textCardSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_booking_info"
            app.cardCornerRadius="8dp"
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_event_note_black_24dp"
                                />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Your Booking Information"
                                    android:layout_marginLeft="8dp"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:fontFamily="@font/bellerose"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/address_bullet"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txt_lab_address"
                                    android:text="Address salon"
                                    android:textStyle="bold"
                                    />

                            </LinearLayout>

                            <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal"
                             >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time_bullet"/>

                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:id="@+id/txt_time"
                                 android:text="Time"
                                 android:textStyle="bold"
                                 />

                         </LinearLayout>
                            <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stylelist_bullet"
                        />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_salon_doktor"
                            android:text="David"
                            android:textStyle="bold"
                            />

                    </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bullet"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textStyle="bold"
                        android:id="@+id/txt_time_remain"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:id="@+id/btn_change_booking"
                        android:layout_marginRight="4dp"
                        android:text="CHANGE"
                        android:layout_weight="1"
                        android:background="@drawable/button_border_bg"

                        />


                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:id="@+id/btn_delete_booking"
                            android:layout_marginRight="4dp"
                            android:text="DELETE"
                            android:layout_weight="1"
                            android:background="@drawable/button_border_bg"

                            />


                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

<LinearLayout
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ss.com.bannerslider.Slider
        android:id="@+id/banner_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:text="Look Book"
            android:fontFamily="@font/bellerose"
            android:textColor="@color/colorButton"
            android:textSize="18sp"
            />

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_look_book"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        >

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>

</LinearLayout>