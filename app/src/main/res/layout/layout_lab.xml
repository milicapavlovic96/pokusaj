<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:id="@+id/card_salon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_laboratory_name"
        android:text="Laboratorija"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/bellerose"
        android:gravity="center_horizontal"
        />

        <TextView
            android:id="@+id/txt_laboratory_address"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_below="@+id/txt_laboratory_name"
            android:fontFamily="@font/bellerose"
            android:gravity="center_horizontal"
            android:text="Adresa laboratorije"
            android:textSize="16sp"
            android:textStyle="italic" />

    </LinearLayout>
</androidx.cardview.widget.CardView>